<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/preguntasFrecuentes.tvTituloPregunta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="5dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/preguntasFrecuentes.tvCuerpoPregunta"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.197"
            app:layout_constraintVertical_chainStyle="packed"
            tools:text="¿Como saber la fecha de mi siguiente factura?" />

        <ImageButton
            android:id="@+id/preguntasFrecuentes.btnDeplegarCuerpoPregunta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="16dp"
            android:background="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/preguntasFrecuentes.tvTituloPregunta"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/flecha_bajo" />

        <TextView
            android:id="@+id/preguntasFrecuentes.tvCuerpoPregunta"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/preguntasFrecuentes.tvTituloPregunta"
            app:layout_constraintTop_toBottomOf="@+id/preguntasFrecuentes.tvTituloPregunta"
            tools:text="Diríjase al apartado de MI Consumo donde deberá introducir los datos y aparecerá su factura" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>
